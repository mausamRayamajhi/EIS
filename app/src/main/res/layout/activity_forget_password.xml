<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mausam.eis.ForgetPasswordActivity">

    <RelativeLayout
        android:id="@+id/fullScreanRelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topBlueAreaLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#495FCF"
            android:orientation="vertical">

        </LinearLayout><!--Top secetion  blue area linearLayout-->


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewMyStore"
            android:layout_width="320dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:visibility="visible"
            app:cardCornerRadius="20dp"
            app:cardElevation="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="My Store"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Forget your password?"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="In order to receive your access code by email, please enter the address you provided during the registration process."
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <EditText

                    android:id="@+id/usernameTextField"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:padding="10dp" />


            </LinearLayout>

        </android.support.v7.widget.CardView><!--End of cardViewMyStore-->

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewRestorePassword"
            android:layout_width="320dp"
            android:layout_height="370dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:visibility="invisible"
            app:cardCornerRadius="20dp"
            app:cardElevation="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Reset password"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Enter new passowrd"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Make sure you both password match else your password will not be saved."
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/newPasswordTextField"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="New password"
                    android:padding="10dp" />


                <EditText
                    android:id="@+id/newPasswordConfirmTextField"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Confirm password"
                    android:padding="10dp" />


            </LinearLayout>

        </android.support.v7.widget.CardView><!--End of Reset password cardView-->

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewRestorePasswordLayout"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="490dp"
            android:alpha="1"
            android:overScrollMode="never"
            android:visibility="invisible"
            app:cardCornerRadius="35dp"
            app:cardElevation="30dp">

            <Button
                android:id="@+id/RestorePasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1"
                android:background="#495FCF"
                android:onClick="resetPasswordNow"
                android:text="Reset"
                android:textColor="#FFF"
                android:textSize="20sp" />



        </android.support.v7.widget.CardView><!--End of reset password  btn cardLayout-->

        <android.support.v7.widget.CardView
            android:id="@+id/verificartionCardView"
            android:layout_width="320dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:visibility="invisible"
            app:cardCornerRadius="20dp"
            app:cardElevation="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Verification"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Want to reset your password?"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="In order to reset your password enter the code  sent in your email account."
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <EditText

                    android:id="@+id/verificationCodeTextField"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Verification code"
                    android:padding="10dp" />


            </LinearLayout>

        </android.support.v7.widget.CardView><!--End of verification cardViewMyStore-->

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewVerifyCode"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="470dp"
            android:alpha="1"
            android:overScrollMode="never"
            android:visibility="invisible"
            app:cardCornerRadius="35dp"
            app:cardElevation="30dp">

            <Button
                android:id="@+id/verifyCodeBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1"
                android:background="#495FCF"
                android:onClick="verifyCode"
                android:text="Check"
                android:textColor="#FFF"
                android:textSize="20sp" />



        </android.support.v7.widget.CardView><!--End of verification check btn cardLayout-->

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewButton"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="470dp"
            android:alpha="1"
            android:overScrollMode="never"
            android:visibility="visible"
            app:cardCornerRadius="35dp"
            app:cardElevation="30dp">

            <Button
                android:id="@+id/forgetPasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1"
                android:background="#495FCF"
                android:onClick="forgetPassword"
                android:text="Send"
                android:textColor="#FFF"
                android:textSize="20sp" />


            <Button
                android:id="@+id/checkEmailBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1"
                android:background="#495FCF"
                android:onClick="checkEmail"
                android:text="Check Email"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:visibility="invisible" />


        </android.support.v7.widget.CardView><!--End of send and webView cardLayout-->


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewLoading"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="415dp"
            android:alpha="1"
            android:overScrollMode="never"
            android:visibility="invisible"
            app:cardCornerRadius="35dp"
            app:cardElevation="30dp">


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />


        </android.support.v7.widget.CardView><!--End of loading cardLayout-->

    </RelativeLayout><!--End of RelativeLayout-->


</LinearLayout><!--End of body layout-->
