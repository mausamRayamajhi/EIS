<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mausam.eis.ParentsModeDashboardActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white"
            app:headerLayout="@layout/header"
            app:itemIconTint="@color/darkGray"
            app:itemTextColor="@color/darkGray"
            app:menu="@menu/drawer_menu_parents">


        </android.support.design.widget.NavigationView>
<!--old stuff was here-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/student"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/stName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Mausam Rayamajhi"
        />

    <TextView
        android:id="@+id/stfaculty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stName"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Doctor"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/stContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stfaculty"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Contact"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/stSemester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stContact"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Current Semester"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/stId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stSemester"
        android:layout_marginStart="6dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="ID"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/passout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stId"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="5dp"
        android:text="passOut"
        android:textColor="@color/white"
        android:textSize="30sp" />


</RelativeLayout>

    </android.support.v4.widget.DrawerLayout>


</LinearLayout>
