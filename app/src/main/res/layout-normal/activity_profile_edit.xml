<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mausam.eis.ProfileEdit">

   <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#495FCF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
             android:gravity="center"
                android:layout_marginTop="50dp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="Edit Profile"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFF">
        </LinearLayout>

    </LinearLayout>


    <!--Defult login view-->
    <android.support.v7.widget.CardView
        android:layout_width="370dp"
        android:layout_height="530dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="30dp">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name :" />

            <EditText
                android:id="@+id/fnameStudent"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <TextView

                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Middle Name :" />

            <EditText
                android:id="@+id/mnameStudent"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="mName" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name :" />

            <EditText
                android:id="@+id/lnameStudent"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="lName" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB :" />

            <EditText
                android:id="@+id/dobStudent"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="DOB" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender :" />

            <Spinner
                android:id="@+id/genderStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_column="1"
                android:layout_row="4"
                >

            </Spinner>

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone :" />

            <EditText
                android:id="@+id/phoneStudent"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Phone" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :" />

            <EditText
                android:id="@+id/addressStudent"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="6"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Address" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_column="0"
                android:layout_row="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :" />

            <EditText
                android:id="@+id/emailStudent"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="7"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Email" />

        </GridLayout>
    </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:id="@+id/cardView"
           android:layout_width="250dp"
           android:layout_height="80dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="670dp"
           android:alpha="1"
           android:overScrollMode="never"
           app:cardCornerRadius="35dp"
           app:cardElevation="30dp">

           <Button
               android:id="@+id/changeStudentPasswordBtn"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:alpha="1"
               android:background="#495FCF"
               android:onClick="editStudentProfile"
               android:text="Reset"
               android:textColor="#FFF"
               android:textSize="20sp" />


       </android.support.v7.widget.CardView>


</RelativeLayout>
</LinearLayout>
